{% extends 'base.html.twig' %}

{% block title %}Fpvm!{% endblock %}

{% block body %}
<body style="background: url(/images/bg4.jpg) no-repeat center;">
    <h2 style="text-align: center; text-decoration: underline; font-family: 'Arial Black'; color: #710193; margin-top: 20px; margin-bottom: 20px;">Adidin'i {{ adidy.mpiangona.anarana }}</h2>
    <div class="container mt-4">
        <table class="table table-sm" style="font-family: Arial; text-align: center; border: 2px solid #000000;">
            <tr>
                <td style="border: 2px solid #c6c6c6;"><b>Daty nanefana:</b></td>
                <td style="border: 2px solid #c6c6c6;">{{ adidy.datyNanefana |date('d-m-Y') }}</td>
            </tr>
            <tr>
                <td style="border: 2px solid #c6c6c6;"><b>Volana naloha:</b></td>
                <td style="border: 2px solid #c6c6c6;">{{ adidy.volana |date('d-m-Y') }}</td>
            </tr>
            <tr>
                <td style="border: 2px solid #c6c6c6;"><b>Vola nohefana:</b></td>
                <td style="border: 2px solid #c6c6c6;">{{ adidy.vola }}</td>
            </tr>
        </table>
        <a href="{{ path('update_adidy',{'id':adidy.id}) }}" class="btn btn-warning btn-lg btn-block">Anova</a>
    </div>
</body>
{% endblock %}
