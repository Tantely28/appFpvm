{% extends 'base.html.twig' %}

{% block title %}Hello AdidyController!{% endblock %}

{% block body %}
    <body style="background: url(/images/bg4.jpg) no-repeat center;">
    <div class="container mt-4">
        <h2 style="text-align: center; text-decoration: underline; font-family: 'Arial Black'; color: #710193; margin-top: 20px; margin-bottom: 20px;">Adidy</h2>

        <table class="table table-striped" style="font-family: Arial; text-align: center; border: 2px solid #000000;">

            <thead>
            <tr>
                <th style="border: 2px solid #c6c6c6;">Mpiangona</th>
                <th style="border: 2px solid #c6c6c6;">Daty nanefahana</th>
                <th style="border: 2px solid #c6c6c6;">Volana naloha</th>
                <th style="border: 2px solid #c6c6c6;">Vola</th>
                <th style="border: 2px solid #c6c6c6;"></th>
            </tr>
            </thead>
            {% for m in adidy %}
                <tbody>
                <tr>
                    <td style="border: 2px solid #c6c6c6;">{{ m.mpiangona.anarana }}</td>
                    <td style="border: 2px solid #c6c6c6;">{{ m.datyNanefana |date('d-m-Y') }}</td>
                    <td style="border: 2px solid #c6c6c6;">{{ m.volana |date('m-Y') }}</td>
                    <td style="border: 2px solid #c6c6c6;">{{ m.vola }}</td>
                    <td style="border: 2px solid #c6c6c6;">
                        <a href="{{ path("show_adidy",{"id":m.id}) }}" class="btn btn-outline-info">Ijery</a>
                        <a href="{{ path('update_adidy',{'id':m.id}) }}" class="btn btn-outline-warning">Anova</a>
                    </td>
                </tr></tbody>
            {% endfor %}
        </table>
        <a href="{{ path('create_adidy') }}" class="btn btn-primary" style="margin-bottom: 10px;">Hapiditra adidy vaovao</a>
    </div>
    </body>
{% endblock %}