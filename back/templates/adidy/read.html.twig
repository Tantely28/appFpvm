{% extends 'base.html.twig' %}

{% block title %}Hello AdidyController!{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h2 style="text-align: center; text-decoration: underline; font-family: 'Arial Black'; color: #710193; margin-top: 20px; margin-bottom: 20px;">Adidy</h2>
        <a href="{{ path('create_adidy') }}" class="btn btn-outline-primary">Ajouter</a><br>
        <table class="table table-striped">

            <thead>
            <tr><th>Mpiangona</th><th>Daty nanefahana</th><th>Volana</th><th>Vola</th><th></th></tr>
            </thead>
            {% for m in adidy %}
                <tbody><tr><td>{{ m.mpiangona.anarana }}</td><td>{{ m.datyNanefana |date('d-m-Y') }}</td><td>{{ m.volana |date('m-Y') }}</td><td>{{ m.vola }}</td>
                    <td>
                        <a href="{{ path("show_mpiangona",{"id":m.id}) }}" class="btn btn-primary">Ijery</a>
                        <a href="{{ path('update_mpiangona',{'id':m.id}) }}" class="btn btn-secondary">Anova</a>
                        <a href="#" class="btn btn-danger">Amafa</a>
                    </td>
                </tr></tbody>
            {% endfor %}
        </table>
    </div>
{% endblock %}