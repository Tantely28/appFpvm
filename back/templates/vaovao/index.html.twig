{% extends 'base.html.twig' %}

{% block title %}Vaovao{% endblock %}

{% block body %}
    <body style="background: url(/images/bg4.jpg) no-repeat center;">
    <h1 style="text-align: center; text-decoration: underline; font-weight: bold; font-family: 'Arial Black'; color: #710193; margin-top: 20px; margin-bottom: 20px;">Vaovao</h1>

    <table class="table" style="font-family: Arial; text-align: center; border: 2px solid #c6c6c6; border-radius: 6px;">
        <thead>
            <tr style="font-size:20px;">
                <th style="border: 2px solid #c6c6c6;">Laharana</th>
                <th style="border: 2px solid #c6c6c6;">Lohateny</th>
                <th style="border: 2px solid #c6c6c6;">Votohatiny</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for vaovao in vaovaos %}
            <tr>
                <td style="border: 2px solid #c6c6c6;">{{ vaovao.idVaovao }}</td>
                <td style="border: 2px solid #c6c6c6;">{{ vaovao.titre }}</td>
                <td style="border: 2px solid #c6c6c6;">{{ vaovao.contenu }}</td>
                <td style="border: 2px solid #c6c6c6;">
                    <a class="btn btn-outline-info" href="{{ path('vaovao_show', {'idVaovao': vaovao.idVaovao}) }}">Ijery</a>
                    <a class="btn btn-outline-warning" href="{{ path('vaovao_edit', {'idVaovao': vaovao.idVaovao}) }}">Anova</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Mbola tsisy vaovao</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('vaovao_new') }}">Hapiditra Vaovao</a>
    </body>
{% endblock %}

