                    <a class="nav-link" href="#">Toriteny</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Fijoroana vavolombelona</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Mpikambana</a>
                </li>
            </ul>
            <form action="{{ path('logout') }}" class="form-inline my-2 my-lg-0">
                <button class="btn btn-secondary my-2 my-sm-0" type="submit">Deconnecter</button>
            </form>
        </div>
    </nav>

            <div class="container">
                {% block body %}{% endblock %}
