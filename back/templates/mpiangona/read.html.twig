{% extends 'base.html.twig' %}

{% block title %}Mpiangona{% endblock %}

{% block body %}
    <body style="background: url(/images/bg4.jpg) no-repeat center;">
    <div class="container mt-4">
        <h2 style="text-align: center; text-decoration: underline; font-family: 'Arial Black'; color: #710193; margin-top: 20px; margin-bottom: 20px;">Mpiangona</h2>

        <table class="table table-striped" style="font-family: Arial; text-align: center; border: 2px solid #000000;">

            <thead>
            <tr>
                <th style="border: 2px solid #c6c6c6;">Anarana</th>
                <th style="border: 2px solid #c6c6c6;">Telefaonina</th>
                <th style="border: 2px solid #c6c6c6;"></th>
            </tr>
            </thead>
            {% for m in mpiangona %}
                <tbody>
                <tr>
                    <td style="border: 2px solid #c6c6c6;">{{ m.anarana }}</td>
                    <td style="border: 2px solid #c6c6c6;">0{{ m.telephone }}</td>
                    <td style="border: 2px solid #c6c6c6;">
                     <a href="{{ path("show_mpiangona",{"id":m.id}) }}" class="btn btn-outline-info">Ijery</a>
                        <a href="{{ path('update_mpiangona',{'id':m.id}) }}" class="btn btn-outline-warning">Anova</a>
                        <a href="#" class="btn btn-outline-danger">Amafa</a>
                    </td>
                </tr>
                </tbody>
            {% endfor %}
        </table>
        <a href="{{ path('create_mpiangona') }}" class="btn btn-primary" style="margin-bottom: 10px;">Hapiditra Mpiangona Vaovao</a>
    </div>
    </body>
{% endblock %}